# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /expenser                   		controllers.Application.index()
GET		/expenser/report					controllers.Application.displayReport(yearMonth: String ?= null)
GET		/expenser/report/:yyyy/:mm			controllers.Application.displayReport2(yyyy: Int, mm: Int)
#
GET 	/expenser/transaction/:id			controllers.Application.createUpdateTransactionForm(id: Int)
POST	/expenser/transaction/doUpdate		controllers.Application.doUpdateTransaction()

#
GET 	/expenser/categories				controllers.Application.displayCategories()
GET 	/expenser/category/:id				controllers.Application.createDeleteOrUpdateCategoryForm(id: Int, action: String)
GET 	/expenser/category					controllers.Application.createAddCategoryForm()
POST 	/expenser/category					controllers.Application.doAddCategory()
POST 	/expenser/category/:id/:action		controllers.Application.doDeleteOrUpdateCategory(id: Int, action: String)

#
GET		/expenser/tags						controllers.Application.displayTags()
GET		/expenser/tag/:categoryName/:tag/:id	controllers.Application.createDeleteTagScreen(categoryName: String, tag: String, id: Int)
POST	/expenser/tag/delete/:id				controllers.Application.doDeleteTag(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /expenser/assets/*file              controllers.Assets.at(path="/public", file)
